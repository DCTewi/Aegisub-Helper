{
  "name": "aegisub-helper",
  "displayName": "Aegisub-Helper",
  "description": "Karaoke subtitle template helper for aegisub",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.46.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
	"*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "aegs",
        "aliases": [
          "Aegisub Script",
          "aegs"
        ],
        "extensions": [
          ".aegs"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "aegs",
        "scopeName": "source.aegs",
        "path": "./syntaxes/aegs.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "aegs",
        "path": "./snippets/aegs.tmSnippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.47.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}
