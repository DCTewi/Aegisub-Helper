{
  "name": "aegisub-helper",
  "displayName": "Aegisub Helper",
  "description": "Karaoke subtitle template helper for aegisub",
  "author": "DCTewi",
  "publisher": "DCTewi",
  "icon": "configs/aegs.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/DCTewi/Aegisub-Helper"
  },
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:aegs",
    "onCommand:aegisub-helper.compile"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "aegs",
        "aliases": [
          "Aegisub Script",
          "aegs"
        ],
        "extensions": [
          ".aegs"
        ],
        "configuration": "./configs/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "aegs",
        "scopeName": "source.aegs",
        "path": "./configs/aegs.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "aegs",
        "path": "./configs/aegs.tmSnippets.json"
      }
    ],
    "commands": [
      {
        "command": "aegisub-helper.compile",
        "title": "%config.compileCommand%"
      }
    ],
    "keybindings": [
      {
        "command": "aegisub-helper.compile",
        "key": "ctrl+alt+b",
        "when": "resourceLangId == aegs"
      }
    ]
  },
  
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.47.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0"
  }
}
